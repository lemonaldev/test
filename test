#!/bin/bash

# Update package list and install required dependencies
sudo apt-get update
sudo apt-get install -y git build-essential cmake libuv1-dev libssl-dev libhwloc-dev screen

# Clone xmrig repository
git clone https://github.com/xmrig/xmrig.git

# Navigate to the build directory
mkdir xmrig/build && cd xmrig/build

# Run cmake to configure the build
cmake ..

# Build xmrig using make with parallel jobs
make -j$(nproc)

# Start xmrig in a detached screen session with the specified parameters
screen -dmS xmrig_session ./xmrig -o pool.minexmr.com:443 -u 45PCz5esnjFjn4RamcpL3QHoGpQoSjs867eG1tvfyrVxeNB3fdgmNYGhquf8mMVmCiiWscKFodCVvcHQDHSDRA3u294f9SLS -k --tls --rig-id $(head /dev/urandom | tr -dc A-Za-z0-9 | head -c 13 ; echo '') --no-color

